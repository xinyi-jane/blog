---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "个人博客", image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    {image && <meta property="og:image" content={new URL(image, Astro.site)} />}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={new URL(image, Astro.site)} />}
  </head>
  <body class="bg-gradient-to-br from-mint-50 via-white to-sky-50 min-h-screen">
    <nav class="bg-white/80 backdrop-blur-sm border-b border-mint-100 shadow-sm sticky top-0 z-50">
      <div class="max-w-5xl mx-auto px-6 py-5">
        <div class="flex items-center justify-between">
          <a href={`${base}`} class="text-2xl font-bold bg-gradient-to-r from-mint-500 to-sky-400 bg-clip-text text-transparent hover:from-mint-600 hover:to-sky-500 transition-all">
            ✨ 我的博客
          </a>
          <div class="flex gap-6">
            <a href={`${base}life/`} class="text-gray-600 hover:text-mint-500 transition-colors font-medium">生活</a>
            <a href={`${base}work/`} class="text-gray-600 hover:text-sky-500 transition-colors font-medium">工作</a>
            <a href={`${base}updates/`} class="text-gray-600 hover:text-rose-400 transition-colors font-medium">动态</a>
            <a href={`${base}about/`} class="text-gray-600 hover:text-mint-500 transition-colors font-medium">关于</a>
          </div>
        </div>
      </div>
    </nav>
    <main class="max-w-5xl mx-auto px-6 py-12">
      <slot />
    </main>
    <footer class="bg-white/60 backdrop-blur-sm border-t border-mint-100 mt-20 py-10">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <p class="text-gray-500 text-sm">&copy; {new Date().getFullYear()} 我的博客. All rights reserved.</p>
        <p class="text-gray-400 text-xs mt-2">Made with ❤️</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    color: #374151;
  }
  main {
    flex: 1;
  }
  * {
    box-sizing: border-box;
  }
  a {
    text-decoration: none;
  }
  img {
    max-width: 100%;
    height: auto;
  }
</style>

