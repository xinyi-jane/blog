---
// Admin 页面 - 服务 Decap CMS
---

<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>内容管理</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      margin: 0;
      padding: 0;
      background: #f5f5f5;
    }
    .loading {
      text-align: center;
      padding: 40px;
      color: #666;
    }
    #nc-root {
      min-height: 100vh;
    }
  </style>
</head>
<body>
  <div id="nc-root" class="loading">正在加载内容管理系统...</div>
  
  <!-- Include the script that builds the page and powers Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  <script>
    // 全局错误处理，捕获未处理的 Promise 错误
    window.addEventListener('unhandledrejection', function(event) {
      // 忽略 "message port closed" 错误，这通常是浏览器扩展引起的
      if (event.reason && event.reason.message && event.reason.message.includes('message port closed')) {
        event.preventDefault();
        console.warn('Ignored message port error (likely from browser extension)');
        return;
      }
      // 其他错误正常处理
      console.error('Unhandled promise rejection:', event.reason);
    });
    
    // 处理 OAuth 回调后的 token
    (function() {
      // 检查 URL 中的 token 参数
      const urlParams = new URLSearchParams(window.location.search);
      const hashParams = new URLSearchParams(window.location.hash.substring(1));
      const token = urlParams.get('token') || hashParams.get('token');
      
      if (token) {
        console.log('Token found in URL, saving to localStorage...');
        
        // Decap CMS 使用 localStorage 存储用户信息
        // 格式：{ token: 'xxx', backend: 'github' }
        try {
          const userData = {
            token: token,
            backend: 'github'
          };
          
          // 保存到 localStorage
          localStorage.setItem('netlify-cms-user', JSON.stringify(userData));
          console.log('Token saved to localStorage:', userData);
          
          // 同时保存到 sessionStorage
          sessionStorage.setItem('netlify-cms-user', JSON.stringify(userData));
          
          // 清除 URL 中的 token 参数
          const cleanUrl = window.location.pathname + (window.location.hash.split('?')[0] || '');
          window.history.replaceState({}, document.title, cleanUrl);
          
          // 延迟刷新，确保 localStorage 已保存
          setTimeout(function() {
            window.location.reload();
          }, 100);
        } catch (e) {
          console.error('Failed to save token:', e);
        }
        return;
      }
      
      // 检查是否已有保存的用户信息
      const savedUser = localStorage.getItem('netlify-cms-user');
      if (savedUser) {
        try {
          const userData = JSON.parse(savedUser);
          if (userData.token) {
            console.log('Found saved token in localStorage:', userData);
            
            // 等待 Decap CMS 加载完成后，手动触发认证
            // 使用多种方式确保 Decap CMS 已初始化
            function tryAuthenticate() {
              // 检查 Decap CMS 是否已初始化
              if (window.CMS) {
                try {
                  const backend = window.CMS.getBackend();
                  if (backend && backend.authenticate) {
                    console.log('Attempting to authenticate with Decap CMS...');
                    backend.authenticate().then(function() {
                      console.log('Authentication successful');
                      // 不自动刷新，让 Decap CMS 自然显示界面
                    }).catch(function(err) {
                      console.warn('Authentication check failed (this may be normal):', err);
                    });
                  } else {
                    console.log('Backend not ready yet, retrying...');
                    setTimeout(tryAuthenticate, 500);
                  }
                } catch (e) {
                  console.warn('Error accessing backend:', e);
                }
              } else {
                // Decap CMS 还没加载，继续等待
                setTimeout(tryAuthenticate, 500);
              }
            }
            
            // 在页面加载完成后开始尝试
            if (document.readyState === 'complete') {
              setTimeout(tryAuthenticate, 1000);
            } else {
              window.addEventListener('load', function() {
                setTimeout(tryAuthenticate, 1000);
              });
            }
          }
        } catch (e) {
          console.error('Failed to parse saved user data:', e);
        }
      }
    })();
  </script>
</body>
</html>
